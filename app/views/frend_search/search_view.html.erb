<div class="page-header">
  <h1>Friends Search</h1>
</div>

<body>
  <form action="#" class="search" method="get">

    <span>

      <input name="ゲーム" type="checkbox" value="サンプル">ゲーム&nbsp;&nbsp;
      <input name="アニメ" type="checkbox" value="サンプル">アニメ&nbsp;&nbsp;
      <input name="政治・経済" type="checkbox" value="サンプル">政治・経済&nbsp;&nbsp;
      <input name="エンタメ" type="checkbox" value="サンプル">エンタメ&nbsp;&nbsp;
      <input name="スポーツ" type="checkbox" value="サンプル">スポーツ&nbsp;&nbsp;
      <input name="IT・科学" type="checkbox" value="サンプル">IT・科学&nbsp;&nbsp;
      <input name="ライフ" type="checkbox" value="サンプル">ライフ&nbsp;&nbsp;
      <input name="旅行" type="checkbox" value="サンプル">旅行&nbsp;&nbsp;
      <input name="グルメ" type="checkbox" value="サンプル">グルメ&nbsp;&nbsp;
    </span>

    <div>
      <input class="textBox" name="example" type="text">
      <input class="btn" type="submit" value="検索">
    </div>

  </form>
  <table class="table table-striped table-bordered table-condensed">
    <thead>
      <tr>
        <th colspan="1">Name</th>
        <th colspan="1">Actions</th>
      </tr>
    </thead>
    <tbody>
    <tr>
      <td><%= link_to "anonymous", "your_status/anonymous" %></td>
      <td><%= link_to "follow", "follow/anonymous"%></td>
    </tr>
      <% unless @my_friends.nil? %>
      <% @my_friends.each do |friends| %>
      <tr>
        <td><%= link_to friends.friendname, "your_status/" + friends.friendname  %></td>
        <td><%= link_to "add", "add/" + friends.friendname  %></td>
        <td>
          <!-- This currently works but smells -->

          <%#= icon_delete_link_to(person, people_path, person.full_name) %>
        </td>
      </tr>
      <% end %>
      <% else %>
      <tr>
        <td colspan="0">Nothing to see here move along please</td>
      </tr>
      <% end %>
    </tbody>
  </table>

</body>